<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YiChing.CvConfig">

    <VerticalStackLayout>
        <Label Text="Answer Language" />
        <Entry x:Name="txtAnswerLanguage" Text="{Binding Settings.AnswerLanguage}" />
        <Picker Title="Select an Answer Language" x:Name="myPicker" ItemsSource="{Binding Items}">
            <Picker.SelectedItem>
                <Binding Path="Settings.AnswerLanguage" Mode="TwoWay" />
            </Picker.SelectedItem>
            <Picker.Items>
                <x:String>English</x:String>
                <x:String>Danish</x:String>
                <x:String>Hungarian</x:String>
            </Picker.Items>
        </Picker>

        <!-- New configuration entries for text elements -->
        <Label Text="Question Prefix" />
        <Entry x:Name="txtQuestionPrefix" Text="{Binding Settings.QuestionPrefix}" />

        <Label Text="Answer Prefix" />
        <Entry x:Name="txtAnswerPrefix" Text="{Binding Settings.AnswerPrefix}" />

        <Label Text="Translation Request" />
        <Entry x:Name="txtTranslationRequest" Text="{Binding Settings.TranslationRequest}" />

        <Label Text="Steps Header" />
        <Entry x:Name="txtStepsHeader" Text="{Binding Settings.StepsHeader}" />

        <Label Text="Output Format Header" />
        <Entry x:Name="txtOutputFormatHeader" Text="{Binding Settings.OutputFormatHeader}" />

        <Label Text="Notes Header" />
        <Entry x:Name="txtNotesHeader" Text="{Binding Settings.NotesHeader}" />

        <Label Text="Step 1" />
        <Entry x:Name="txtStep1" Text="{Binding Settings.Step1}" />

        <Label Text="Step 2" />
        <Entry x:Name="txtStep2" Text="{Binding Settings.Step2}" />

        <Label Text="Step 3" />
        <Entry x:Name="txtStep3" Text="{Binding Settings.Step3}" />

        <Label Text="Note 1" />
        <Entry x:Name="txtNote1" Text="{Binding Settings.Note1}" />

        <Label Text="Note 2" />
        <Entry x:Name="txtNote2" Text="{Binding Settings.Note2}" />

        <Button x:Name="btnReturn" Text="Return"></Button>
    </VerticalStackLayout>
</ContentView>
