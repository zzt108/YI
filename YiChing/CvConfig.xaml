<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YiChing.CvConfig">
    <StackLayout>
        <Picker x:Name="myPicker" Title="Select Language">
            <Picker.Items>
                <x:String>English</x:String>
                <x:String>Chinese</x:String>
            </Picker.Items>
        </Picker>

        <Label x:Name="txtAnswerLanguage" />

        <Button x:Name="btnReturn" Text="Return" />
    </StackLayout>
</ContentPage>
