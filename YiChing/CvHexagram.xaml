<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YiChing.CvHexagram">
    <StackLayout x:Name="stack">
        <StackLayout Orientation="Vertical">
            <!-- Changed to Vertical Orientation for main StackLayout -->
            <!-- First column containing another stacklayout -->
            <StackLayout Orientation="Horizontal">
                <StackLayout HorizontalOptions="FillAndExpand">
                    <!-- Added FillAndExpand here -->
                    <!-- Dropdown for Hexagrams -->
                    <Picker x:Name="hexagramPicker"
                            Title="Select from history ..."
                            SelectedIndexChanged="OnHexagramSelected"
                            HorizontalOptions="FillAndExpand"/>
                    <!-- Added FillAndExpand here -->

                    <Editor x:Name="rtQuestion"
                            Text="{Binding QuestionText, Mode=TwoWay}"
                            HorizontalOptions="FillAndExpand"  
                        HeightRequest="200"
                            HorizontalTextAlignment="Start"/>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <!-- Added FillAndExpand here -->
                        <StackLayout x:Name="stackHexagram"
                                     HorizontalOptions="Start"
                                     WidthRequest="200">
                            <Grid x:Name="gridHexagram"
                                  WidthRequest="200">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </StackLayout>
                        <StackLayout x:Name="stackButtons" HorizontalOptions="End">
                            <!-- Aligned buttons to the end -->
                            <Button x:Name="btnYarrow"
                                    Text="Yarrow Stalks"
                                    BackgroundColor="DarkGreen">
                            </Button>

                            <Button x:Name="btnCopy" Text="Copy All" />
                            <!-- Keep existing button, rename -->
                            <Button x:Name="btnCopyAnswer" Text="Copy Answer" />
                            <Button x:Name="btnCopySystem" Text="Copy System" />

                            <!-- AI URL Picker -->
                            <Picker x:Name="aiUrlPicker"
                                    Title="Select AI URL"
                                    ItemsSource="{Binding Settings.SavedUrls}"
                                    SelectedItem="{Binding SelectedAIUrl, Mode=TwoWay}"/>

                            <Button x:Name="btnOpenAI"
                                    Text="Consult AI"
                                    Clicked="OnOpenAIClicked"
                                    BackgroundColor="#0078D4">
                            </Button>
                            <Button x:Name="btnConfig"
                                    Text="Configuration">
                            </Button>
                            <Button x:Name="btnClear"
                                    Text="Save/New"
                                    BackgroundColor="DarkRed">
                            </Button>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand">
                        <!-- Added FillAndExpand here -->
                        <Editor x:Name="rtAnswer"
                                IsReadOnly="True"
                                HeightRequest="150"
                                HorizontalOptions="FillAndExpand"/>
                        <!-- Added FillAndExpand here -->
                    </StackLayout>
                </StackLayout>
                <!-- Right column containing Answers editor -->
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentView>